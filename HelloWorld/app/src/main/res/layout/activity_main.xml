<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/prof_blue"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/ResumePic"
        android:layout_width="360dp"
        android:layout_height="390dp"
        android:scaleType="fitXY"
        android:src="@drawable/pic1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onPicClick" />

    <TextView
        android:id="@+id/Blurb"
        style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ResumePic"
        android:text="@string/Blurb"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/Learnbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/button_yellow"
        android:textColor="@color/prof_blue"
        android:text="@string/Learn"
        android:onClick="onLearnClick"/>


</androidx.constraintlayout.widget.ConstraintLayout>